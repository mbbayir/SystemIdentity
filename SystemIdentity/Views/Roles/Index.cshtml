@{
    ViewData["Title"] = "Index";
}
@model List<RoleListModel>
<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="text-center mb-4">
                <h1>Roller</h1>
                <a class="btn btn-primary mb-3" asp-controller="Roles" asp-action="RoleCreated">Rol Ekle</a>
            </div>
            <div class="table-responsive">
                @if (TempData["SuccessedMessage"] != null)
                {
                    <div class="alert alert-info" role="alert">
                        @TempData["SuccessedMessage"]
                    </div>
                }
                <table class="table table-bordered table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Rol İsmi</th>
                            <th scope="col">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-controller="Roles" asp-action="RoleUpdate" asp-route-id="@item.Id">Role Güncelle</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Roles" asp-action="RoleDelete" asp-route-id="@item.Id">Role Silme</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
