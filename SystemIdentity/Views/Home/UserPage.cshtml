@{
    ViewData["Title"] = "UserPage";
}


<h2>Üye Bilgileri</h2>
<div class="row">
    <div class="col-md-8">
        <div class="accordion" id="userAccordion">
            <div class="accordion-item">
                <div id="personalInfoCollapse" class="accordion-collapse collapse show" aria-labelledby="personalInfoHeading" data-parent="#userAccordion">
                    <div class="accordion-body">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-8">
                                    <table class="table">
                                        <tr>
                                            <td><b>Adı Soyadı</b></td>
                                            <td>@item.FullName</td>
                                        </tr>
                                        <tr>
                                            <td><b>Kullanıcı Adı</b></td>
                                            <td>@item.UserName</td>
                                        </tr>
                                        <tr>
                                            <td><b>E-Posta</b></td>
                                            <td>@item.Email</td>
                                        </tr>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

<!-- Bootstrap 4 -->
